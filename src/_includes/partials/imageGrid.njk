<div class="p-8 mx-auto flex flex-col bg-white justify-items-center">
    <div class="flex justify-center">
        <div class="w-8 h-0.5 bg-red-600 mt-4"></div> 
        <h1 class="mx-2 text-2xl">{{params.data.title}}</h1>
        <div class="w-8 h-0.5 bg-red-600 mt-4"></div>
    </div>
  <div class="flex flex-col self-center align-center text-center text-black md:flex-row md:justify-center py-4 md:flex-wrap">
    {%- for item in params.items -%}
      <div class="mx-12 px-18 py-4 flex flex-col self-center md:self-start rounded lg:w-1/5">
        {% if item.data.pageLink %}
            <a href="{{item.data.pageLink}}"><img src="{{item.data.path}}"/></a>
        {% else %}
            <img src="{{item.data.path}}"/>
        {% endif %}
        <h4 class="self-center text-2xl mb-2 group-hover:text-pud_green"><b>{{item.templateContent | safe}}</b></h4>
      </div>
    {%- endfor -%}
  </div>
</div>
