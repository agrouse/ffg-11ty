<section class="p-16 mx-auto flex flex-col bg-white">
  <h1 class="self-center text-3xl">How We Serve</h1>
  <div class="flex justify-center mb-2">
    <div class="w-8 h-0.5 bg-red-600 mt-3"></div> 
    <p class="mx-2">Programs</p>
    <div class="w-8 h-0.5 bg-red-600 mt-3"></div>
  </div>
  <div class="flex flex-col self-center align-center text-center text-gray-600 lg:flex-row py-10">
    {%- for card in collections.infoCard -%}
      <div class="transition duration-700 group mx-12 px-18 py-4 flex flex-col self-center rounded hover:shadow-sm lg:w-1/3">
        <span class="self-center mb-5 group-hover:text-pud_green">{{ card.data.icon | safe }}</span>
        <h4 class="self-center text-2xl mb-2 group-hover:text-pud_green">{{card.data.title}}</h4>
        <p class="self-center">{{card.templateContent | safe}}<p>
        <button class="transition duration-300 opacity-0 bg-pud_green text-white font-bold py-2 px-4 mt-5 rounded group-hover:opacity-100">
            Learn More
        </button>

      </div>
    {%- endfor -%}
  </div>
</section>
