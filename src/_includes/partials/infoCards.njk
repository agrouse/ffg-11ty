<section class="h-full py-10 flex flex-col">
  
  <h1 class="self-center text-3xl font-medium">How We Serve</h1>
  <div class="flex justify-center mb-2">
    <div class="w-8 h-0.5 bg-red-600 mt-3"></div>
    <p class="mx-2 text-xl">Programs</p>
    <div class="w-8 h-0.5 bg-red-600 mt-3"></div>
  </div>
  <div class="max-w-md flex flex-col container self-center align-center text-center text-gray-600 lg:flex-row">
    {%- for card in collections.infoCard -%}
      <div class="w-full h-full object-cover mx-12 px-18 py-20 mb-10 flex flex-col self-center  lg:w-1/3">
        <h4 class="font-medium mb-7 self-center md:flex-shrink-0">{{card.data.title}}</h4>
        <p class="self-center md:flex-shrink-0">{{card.templateContent | safe}}<p>
      </div>
    {%- endfor -%}
  </div>
</section>
