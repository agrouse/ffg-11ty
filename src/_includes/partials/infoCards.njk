<section class="h-full py-10 flex flex-col">
  
  <h1 class="self-center text-3xl font-medium">How We Serve</h1>
  <div class="flex justify-center mb-2">
    <div class="w-8 h-0.5 bg-red-600 mt-3"></div>
    <p class="mx-2 text-xl">Programs</p>
    <div class="w-8 h-0.5 bg-red-600 mt-3"></div>
  </div>
  <div class="container flex flex-row justify-center text-gray-600">
    {%- for card in collections.infoCard -%}
      <div class="w-1/3 mx-12 px-18 py-20 mb-10 flex flex-col">
        <h4 class="font-medium mb-7 self-center">{{card.data.title}}</h4>
        <p class="self-center">{{card.templateContent | safe}}<p>
      </div>
    {%- endfor -%}
  </div>
</section>
